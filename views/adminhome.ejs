<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
    crossorigin="anonymous"
  />
    <title>ADMIN HOME</title>
</head>

<body>
<div class=""><a href="/admin/adduser"><button class="btn btn-dark">add user</button></a></div>


    <table class="table">
        <thead class="thead-dark bg-dark text-light">
          <tr>
            <th scope="col ">#</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Password</th>
          
            <th scope="col">action</th>
          </tr>
        </thead>
        <tbody>
          <% userinfo.forEach((i,index)=>{ %>
          <tr>  
          
            <th scope="row"><%= index+1 %></th>

          
            <td><%= i.Name %></td>
            <td><%= i.Email %></td>
            <td><%= i.Password %></td>
           
            <td> <a href="/admin/adminedit"><button class="btn btn-secondary">edit</button></a> <button class="btn btn-danger">delete</button></td>

              <% }) %>
          </tr>
    
        </tbody>
      </table>
      <div class="d-flex justify-content-center mt-5"> <a href="/admin/adminlogout"><button class="btn btn-light">logout </button></a></div>
</body>
</html>

